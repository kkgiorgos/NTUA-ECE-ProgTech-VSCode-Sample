{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "./scripts/make.ps1"
            },
            "linux": {
                "command": "./scripts/make.sh"
            },
            "group": "build"
        },
        {
            "label": "execute",
            "type": "shell",
            "windows": {
                "command": "./scripts/execute.ps1"
            },
            "linux": {
                "command": "./scripts/execute.sh"
            },
            "group": "build"
        },
        {
            "label": "upload",
            "type": "shell",
            "windows": {
                "command": "./scripts/upload.ps1"
            },
            "linux": {
                "command": "./scripts/upload.sh"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}",
                "-I${fileDirname}/../inc/"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
